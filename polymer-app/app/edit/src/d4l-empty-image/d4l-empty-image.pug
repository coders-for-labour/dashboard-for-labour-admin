dom-module#d4l-empty-image
  style(is="custom-style" include="iron-flex iron-positioning iron-flex-alignment")
  style(include="d4l-theme")
  style(include="shared-styles").
    :host {
      display: block;

      padding: 10px;
    }
    .empty-image{
      max-width: 350px;
      width: var(--crm-empty-image-size, 50vw);
    }
    p {
      /*@apply(--crm-font-secondary-title);*/
      @apply(--crm-font-common-base);
      @apply(--crm-font-popup-primary-title);

      max-width: 350px;
      margin-top: 20px;
      text-align: center;

      color: var(--text-dark-secondary-color)
    }

  template
    .layout.horizontal.center.center-justified
      .layout.vertical
        .layout.horizontal.center-justified
          iron-image.empty-image(src="/images/logo-icon.svg")
        p
          content

  script.
    Polymer({
      is: 'd4l-empty-image'
    });
